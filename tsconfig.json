{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "jsx": "react",
        "module": "esnext",
        "target": "esnext",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "rootDir": "src",
        "noUnusedLocals": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/*.d.ts",
        "./src/lib/**/*"
    ],
    "exclude": [
        "src/test",
        "**/*.spec.tsx",
        "**/*.stories.tsx"
    ]
}
