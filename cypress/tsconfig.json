{
    "compilerOptions": {
        "strict": true,
        "target": "es2017",
        "jsx": "react",
        "lib": ["es5", "dom", "es2016", "es2017"],
        "types": [
            "cypress",
            "node",
            "cypress-cucumber-preprocessor",
            "cypress-wait-until",
            "cypress-real-events"
        ],
        "typeRoots": ["../node_modules/@types"],
        "baseUrl": "..",
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "support/component.tsx",
        "integration/common/Given.cy.tsx",
        "integration/common/When.cy.tsx",
        "integration/common/Then.cy.tsx"
    ],
    "exclude": ["../src"]
}
