    "date-fns": "2.30.0",
    "faker": "5.5.3",
    "material-table": "1.69.3",
    "material-ui-chip-input": "2.0.0-beta.2",
    "ramda": "0.25.0",
    "react-loading-skeleton": "3.3.1",
    "react-number-format": "4.4.1",
    "sprintf-js": "1.1.3",
    "stylis": "4.3.1",
